<div id="fb-root"></div>

<!--Modal: Login / Register Form-->
<div class="modal fade" id="modalLRForm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog cascading-modal" role="document">
    <!--Content-->
    <div class="modal-content">

      <!--Modal cascading tabs-->
      <div class="modal-c-tabs">

        <!-- Nav tabs -->
        <ul class="nav nav-tabs md-tabs tabs-2 darken-3" role="tablist">
          <li class="nav-item">
            <a class="nav-link active" id="modal-nav-link" data-toggle="tab" href="#panel7" role="tab"><i class="fas fa-user mr-1"></i>
              Login</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" id="modal-nav-link" data-toggle="tab" href="#panel8" role="tab"><i class="fas fa-user-plus mr-1"></i>
              Register</a>
          </li>
        </ul>
      </div>

        <!-- Tab panels -->
        <div class="tab-content">
          <!--Panel 7-->
          <div class="tab-pane fade in show active" id="panel7" role="tabpanel">

            <!--Body-->
            <div class="modal-body mb-2 p-3">
              <div class="md-form form-sm mb-2 row">
                <i class="fas fa-envelope prefix"></i>
                <label data-error="wrong" data-success="right" for="modalLRInput10">Your email: </label>
                <input type="email" id="modalLRInput10" class="form-control form-control-sm validate">
              </div>

              <div class="md-form form-sm mb-2 row">
                <i class="fas fa-lock prefix"></i>
                <label data-error="wrong" data-success="right" for="modalLRInput11">Your password: </label>
                <input type="password" id="modalLRInput11" class="form-control form-control-sm validate">
                <p class="invalid-indicator" id="login-invalid">Incorrect Email or Password</p>
              </div>

              <div class="text-center mt-2 p-3 row">
                <button class="btn btn-info" style="background-color: orange; border: none; color: white;">Log in <i class="fas fa-sign-in ml-1"></i></button>
                <div class="fb-login-button" data-size="large" data-button-type="continue_with" data-auto-logout-link="true" data-use-continue-as="true"></div>
              </div>
            </div>
            <!--Footer-->
            <div class="modal-footer">
              <div class="options text-center text-md-right mt-1">
                <p>Not a member? <a href="#" class="blue-text">Sign Up</a></p>
                <p>Forgot <a href="#" class="blue-text">Password?</a></p>
              </div>
              <button type="button" class="btn btn-outline-info waves-effect ml-auto" data-dismiss="modal" style="background-color: orange; border: none; color: white;">Close</button>
            </div>

          </div>
          <!--/.Panel 7-->

          <!--Panel 8-->
          <div class="tab-pane fade" id="panel8" role="tabpanel">

            <!--Body-->
              <div class="md-form form-sm mb-2">
                <i class="fas fa-envelope prefix"></i>
                <label data-error="wrong" data-success="right" for="modalLRInput12">Your email: </label>
                <input type="email" id="modalLRInput12" class="form-control form-control-sm validate">
                <p class="invalid-indicator" id="email-invalid">Please enter a valid email</p>
              </div>

              <div class="md-form form-sm mb-2">
                <i class="fas fa-lock prefix"></i>
                <label data-error="wrong" data-success="right" for="modalLRInput13">Your password: </label>
                <input type="password" id="modalLRInput13" class="form-control form-control-sm validate">
                <p class="invalid-indicator" id="password-invalid">Please enter a valid password</p>
              </div>

              <div class="md-form form-sm mb-2">
                <i class="fas fa-lock prefix"></i>
                <label data-error="wrong" data-success="right" for="modalLRInput14">Confirm password: </label>
                <input type="password" id="modalLRInput14" class="form-control form-control-sm validate">
                <p class="invalid-indicator" id="confirm-invalid">Your passwords do not match</p>
              </div>

              <div class="text-center form-sm mt-2">
                <button class="btn btn-info" style="background-color: orange; border: none; color: white;">Sign up <i class="fas fa-sign-in ml-1"></i></button>
              </div>
              <!--Footer-->
              <div class="modal-footer">
                <div class="options text-right">
                  <p class="pt-1">Already have an account? <a href="#panel7" class="blue-text">Log In</a></p>
                </div>
                <button type="button" class="btn btn-outline-info waves-effect ml-auto" data-dismiss="modal" style="background-color: orange; border: none; color: white;">Close</button>
              </div>
          </div>
        </div>
          <!--/.Panel 8-->
      </div>

      </div>
    </div>
    <!--/.Content-->
  </div>
</div>
